<div class="show-container">
  <% if @pratician.photo.attached? %>
    <%= cl_image_tag(@pratician.photo.key, class: "show-photo")%>
  <% end %>
  <div class="show-text">
    <h2><%= @pratician.first_name %></h2>
    <h2><%= @pratician.last_name.upcase %></h2>
    <ul>
      <li>
        <%= image_tag "svg/heart_favorites.svg" %>
        <div class="show-tag">
          <p class="show-tag-job">
            <%= @pratician.job %>
          </p>
        </div>
      </li>
      <li>
        <%= image_tag "svg/phone.svg" %>
        <div class="show-tag">
          <%= @pratician.phone_number %>
        </div>
      </li>
      <li>
        <%= image_tag "svg/email.svg" %>
        <div class="show-tag">
          <%= @pratician.email %>
        </div>
      </li>
      <li>
        <%= image_tag "svg/location_show.svg" %>
        <div class="show-tag">
          <%= @pratician.address %>
        </div>
      </li>
    </ul>
  </div>
</div>
