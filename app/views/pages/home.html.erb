<div class="container">
  <div>
    <h1>IZEN</h1>
  </div>
  <p>Trouver un praticien recommandé en médecines douces proche de chez vous</p>
  <div class= "search-bar">
    <%= form_with url: praticians_path, method: :get, class: "search-form" do %>
      <%= text_field_tag :query, params[:query], class: "search", placeholder: "Symptôme, thérapie, praticien" %>
      <%= text_field_tag :address, params[:address], class: "search", placeholder: "Commune, code postal" %>
      <%= submit_tag "Trouvez votre praticien", class: "btn-ghost search-btn text-dark" %>
    <% end %>
  </div>
  <h2 >Thématiques</h2>
  <div class=container-cercles>
    <%= link_to "/thematique1" do %>
      <div class="cercle">
        <%= image_tag "svg/eye_homepage.svg" %>
      </div>
    <% end %>
    <%= link_to "/thematique2" do %>
      <div class="cercle">
        <%= image_tag "svg/sound_homepage.svg" %>
      </div>
    <% end %>
    <%= link_to "/thematique3" do %>
      <div class="cercle">
        <%= image_tag "svg/hand_homepage.svg" %>
      </div>
    <% end %>
  </div>
</div>
