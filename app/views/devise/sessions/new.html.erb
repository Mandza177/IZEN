<div class="titlelog"><h2>SE CONNECTER</h2></div>

  <div class="formlog"><%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <div class="inputemail"><%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %></div>
      <div class="inputpassword"><%= f.input :password,
                  required: false,
                  label: "mot de passe",
                  input_html: { autocomplete: "current-password" } %></div>
      <%= f.input :remember_me, label: "se souvenir de moi", as: :boolean if devise_mapping.rememberable?
    %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
